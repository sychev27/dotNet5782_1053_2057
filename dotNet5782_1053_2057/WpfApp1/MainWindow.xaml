<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="800">
    <Grid Name="MainGrid">
        <Button x:Name="btnOpenDroneList" Content="Open Drone List" HorizontalAlignment="Left" Margin="596,358,0,0" Grid.Row="1" VerticalAlignment="Top" Height="61" Width="106" RenderTransformOrigin="0.5,0.5" Click="btnOpenDroneList_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnAddDrone" Content="Add a Drone" HorizontalAlignment="Left" Height="82" Margin="88,161,0,0" Grid.Row="1" VerticalAlignment="Top" Width="141" Click="btnAddDrone_Click"/>
        <Button x:Name="btnUpdateDrone" Content="Update a Drone" HorizontalAlignment="Left" Margin="350,128,0,0" VerticalAlignment="Top" Height="74" Width="131" Click="btnUpdateDrone_Click"/>
    </Grid>
</Window>
